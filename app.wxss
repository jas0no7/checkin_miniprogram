page {
  background: #f6f7fb;
  color: #1f2937;
  font-size: 28rpx;
}

.container {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(15, 23, 42, 0.08);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.muted {
  color: #6b7280;
}

.btn-primary {
  background: #2563eb;
  color: #ffffff;
}

.btn-ghost {
  background: #e2e8f0;
  color: #1f2937;
}

.btn-disabled {
  background: #cbd5e1;
  color: #ffffff;
}

.input {
  background: #f1f5f9;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.picker {
  padding: 16rpx 0;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: #eef2ff;
  color: #3730a3;
  font-size: 24rpx;
}

.modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.modal {
  width: 620rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.modal-actions button {
  flex: 1;
}

.grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.week-cell,
.day-cell {
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

.week-cell {
  font-weight: 600;
  color: #475569;
}

.day-cell {
  background: #ffffff;
  position: relative;
}

.day-cell.empty {
  background: transparent;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  background: #22c55e;
  border-radius: 999rpx;
  position: absolute;
  bottom: 8rpx;
}

.hint {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}
